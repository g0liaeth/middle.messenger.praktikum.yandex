{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "declaration": false,
    "module": "ESNext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "server"],
  "include": ["src/**/*.ts"]
}
